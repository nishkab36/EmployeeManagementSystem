# Form4.cs: #
using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using System.Data.SqlClient;

namespace WindowsFormsApp1
{
    public partial class Form4 : Form
    {
        SqlConnection con = new SqlConnection();
        public Form4()
        {
            InitializeComponent();
        }

        private void Form4_Load(object sender, EventArgs e)
        {
            string connstring = @"Data Source=(LocalDB)\MSSQLLocalDB;AttachDbFilename=C:\Users\bijal\Documents\CaseStudy.mdf;Integrated Security=True;Connect Timeout=30";
            con.ConnectionString = connstring;
            con.Open();
            PopulateEmployeeComboBox();
        }
        private void PopulateEmployeeComboBox()
        {
            cmbempid.Items.Clear();

            string query = "SELECT EmployeeId FROM Employees";
            SqlCommand cmd = new SqlCommand(query, con);
            SqlDataReader reader = cmd.ExecuteReader();
            while (reader.Read())
            {
                cmbempid.Items.Add(reader["EmployeeId"].ToString());
            }
            reader.Close();
        }

        private void btnsubmit_Click(object sender, EventArgs e)
        {
            int employeeId = int.Parse(cmbempid.SelectedItem.ToString());
            DateTime payPeriodStart = dateTimePicker1.Value;
            DateTime payPeriodEnd = dateTimePicker2.Value;
            decimal basicSalary = decimal.Parse(textBox1.Text);
            decimal totalHoursWorked = string.IsNullOrEmpty(textBox2.Text) ? 0 : decimal.Parse(textBox2.Text);
            decimal deductions = string.IsNullOrEmpty(textBox3.Text) ? 0 : decimal.Parse(textBox3.Text);
            decimal netPay = CalculateNetPay(basicSalary, totalHoursWorked, deductions);
            string query = "INSERT INTO Payroll (EmployeeID, PayPeriodStart, PayPeriodEnd, BasicSalary, TotalHoursWorked, Deductions, NetPay) " +
                           "VALUES (" + employeeId + ", '" +
                           payPeriodStart.ToString("yyyy-MM-dd HH:mm:ss") + "', '" +
                           payPeriodEnd.ToString("yyyy-MM-dd HH:mm:ss") + "', " +
                           basicSalary + ", " +
                           totalHoursWorked + ", " +
                           deductions + ", " +
                           netPay + ")";

            SqlCommand cmd = new SqlCommand();
            cmd.Connection = con;
            cmd.CommandText = query;
            cmd.ExecuteNonQuery();

            MessageBox.Show("Payroll record inserted successfully.");

            ShowNetPayMessage(employeeId, netPay);
        }
        private decimal CalculateNetPay(decimal basicSalary, decimal totalHoursWorked, decimal deductions)
        {
            return basicSalary - deductions;
        }
        private void ShowNetPayMessage(int employeeId, decimal netPay)
        {
            MessageBox.Show("Employee ID: " + employeeId + "\n" +
                            "Net Pay: " + netPay.ToString("C2"),    
                            "Net Pay Calculation",
                            MessageBoxButtons.OK,
                            MessageBoxIcon.Information);
        }
    }
}
