# Form5.cs: #
using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Data.SqlClient;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace WindowsFormsApp1
{
    public partial class Form5 : Form
    {
        SqlConnection con = new SqlConnection();
        public Form5()
        {
            InitializeComponent();
        }

        private void Form5_Load(object sender, EventArgs e)
        {
            string connstring = @"Data Source=(LocalDB)\MSSQLLocalDB;AttachDbFilename=C:\Users\bijal\Documents\CaseStudy.mdf;Integrated Security=True;Connect Timeout=30";
            con.ConnectionString = connstring;
            con.Open();
            PopulateEmployeeComboBox();
        }

        private void btnsubmit_Click(object sender, EventArgs e)
        {
            if (cmbempid.SelectedItem == null ||
                dateTimePicker1.Value == null ||
                dateTimePicker2.Value == null ||
                dateTimePicker3.Value == null ||
                cmbstatus.SelectedItem == null)
            {
                MessageBox.Show("Employee ID, Punchin Time, Punchout Time, Date, and Status are required fields.");
                return; 
            }

            int employeeId = int.Parse(cmbempid.SelectedItem.ToString());
            string checkQuery = "SELECT COUNT(*) FROM Employees WHERE EmployeeId = @EmployeeId";
            SqlCommand checkCmd = new SqlCommand(checkQuery, con);
            checkCmd.Parameters.AddWithValue("@EmployeeId", employeeId);
            int employeeExists = (int)checkCmd.ExecuteScalar();

            if (employeeExists == 0)
            {
                MessageBox.Show("The selected Employee ID does not exist in the Employees table.");
                return; 
            }

            DateTime date = dateTimePicker3.Value.Date;

            string query = "INSERT INTO Attendance (EmployeeId, Date, CheckInTime, CheckOutTime, Status) " +
                           "VALUES (" + employeeId + ", '" +
                           date.ToString("yyyy-MM-dd") + "', '" +
                           dateTimePicker1.Value.ToString("HH:mm:ss") + "', '" +
                           dateTimePicker2.Value.ToString("HH:mm:ss") + "', '" +
                           cmbstatus.SelectedItem.ToString() + "')";

            SqlCommand cmd = new SqlCommand();
            cmd.Connection = con;
            cmd.CommandText = query;
            cmd.ExecuteNonQuery();

            MessageBox.Show("Attendance Record Inserted Successfully");
        }



        private void PopulateEmployeeComboBox()
        {
            cmbempid.Items.Clear();

            string query = "SELECT EmployeeId FROM Employees";
            SqlCommand cmd = new SqlCommand(query, con);
            SqlDataReader reader = cmd.ExecuteReader();
            while (reader.Read())
            {
                cmbempid.Items.Add(reader["EmployeeId"].ToString());
            }
            reader.Close();
        }

        private void btnfind_Click(object sender, EventArgs e)
        {
            if (cmbempid.SelectedItem == null)
            {
                MessageBox.Show("Please select an Employee ID to find attendance records.");
                return; 
            }

            int employeeId = int.Parse(cmbempid.SelectedItem.ToString());

            string query = "SELECT COUNT(*) FROM Attendance WHERE EmployeeId = @EmployeeId AND Status <> 'On Leave'";

            SqlCommand cmd = new SqlCommand(query, con);
            cmd.Parameters.AddWithValue("@EmployeeId", employeeId);

            int attendanceCount = (int)cmd.ExecuteScalar();

            MessageBox.Show("Employee with ID " + employeeId + " attended for " + attendanceCount + " days.");
        }
    }
}
