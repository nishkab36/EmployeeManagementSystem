# Form1.cs: #
using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Data.SqlClient;
using System.Drawing;
using System.Linq;
using System.Security.Cryptography;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace WindowsFormsApp1
{
    public partial class Form1 : Form
    {
        SqlConnection con = new SqlConnection();
        SqlCommand cmd = new SqlCommand();
        public Form1()
        {
            InitializeComponent();
        }

        private void Form1_Load(object sender, EventArgs e)
        {
            string connstring = @"Data Source = (LocalDB)\MSSQLLocalDB; AttachDbFilename = C:\Users\bijal\Documents\CaseStudy.mdf; Integrated Security = True; Connect Timeout = 30";
            con.ConnectionString = connstring;
            con.Open();
        }

        private void btnLogin_Click(object sender, EventArgs e)
        {
            string query;
            SqlDataReader dr;

            // Check if username is empty
            if (string.IsNullOrEmpty(txtuname.Text))
            {
                MessageBox.Show("Please enter Username");
                txtuname.Focus();
                return;
            }

            // Check if password is empty
            if (string.IsNullOrEmpty(txtpass.Text))
            {
                MessageBox.Show("Please enter Password");
                txtpass.Focus();
                return;
            }

            // Query to check username and password from the Users table
            query = "Select * from Users where Username='" + txtuname.Text + "' and PasswordHash='" + txtpass.Text + "'";
            cmd.CommandText = query;
            cmd.Connection = con;

            dr = cmd.ExecuteReader();

            // If user exists, show success and open Dashboard
            if (dr.Read())
            {
                MessageBox.Show("Login Successfully done");
                dr.Close();

                // Open the Dashboard form
                Form2 dashboard = new Form2();
                dashboard.Show();
                this.Hide();  // Hide login form
            }
            else
            {
                // If credentials are invalid
                MessageBox.Show("Invalid username or password.");
            }

            dr.Close();
        }

        private void btnRegister_Click(object sender, EventArgs e)
        {
            string query;

            query = "Insert into Users(Username, PasswordHash) values ('" + txtuname.Text + "','" + txtpass.Text + "')";
            cmd.CommandText = query;
            cmd.Connection = con;
            cmd.ExecuteNonQuery();

            MessageBox.Show("User Successfully Registered");
        }
    }

}
